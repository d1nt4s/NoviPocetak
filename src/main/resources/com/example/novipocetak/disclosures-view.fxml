<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.novipocetak.controllers.DisclosureSessionsController"
      spacing="12" alignment="TOP_CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Sessions and Disclosure Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="table" prefWidth="900" prefHeight="400">
        <columns>
            <TableColumn fx:id="datumCol" text="Session Date" prefWidth="100"/>
            <TableColumn fx:id="vremeCol" text="Time"/>
            <TableColumn fx:id="trajanjeCol" text="Duration (min)" prefWidth="120"/>
            <TableColumn fx:id="beleskeCol" text="Notes" prefWidth="200"/>
            <TableColumn fx:id="objavaDatumCol" text="Disclosure Date" prefWidth="120"/>
            <TableColumn fx:id="komeCol" text="Disclosed To" prefWidth="120"/>
            <TableColumn fx:id="razlogCol" text="Reason" prefWidth="150"/>
        </columns>
    </TableView>

    <Label text="Add New Disclosure" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Disclosure Date:"/>
        <DatePicker fx:id="disclosureDateField"/>

        <Label text="Disclosed To:"/>
        <TextField fx:id="disclosedToField" promptText="Entity (e.g. Insurance)"/>

        <Label text="Reason:"/>
        <TextField fx:id="reasonField" promptText="e.g. Claim processing"/>
    </HBox>

<!--    <Button text="Save Disclosure" onAction="#saveDisclosure"/>-->
    <Button fx:id="saveDisclosureButton" text="Save Disclosure" />

</VBox>
