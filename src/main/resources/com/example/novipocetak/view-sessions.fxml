<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.novipocetak.controllers.SessionViewController"
      spacing="10" alignment="TOP_CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Sessions" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="sessionsTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
            <TableColumn fx:id="timeColumn" text="Time" prefWidth="100"/>
            <TableColumn fx:id="durationColumn" text="Duration (min)" prefWidth="120"/>
            <TableColumn fx:id="notesColumn" text="Notes" prefWidth="260"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <RadioButton fx:id="pastSessionsRadio" text="Past"
                     toggleGroup="$sessionFilterGroup" selected="true"/>
        <RadioButton fx:id="futureSessionsRadio" text="Future"
                     toggleGroup="$sessionFilterGroup"/>
    </HBox>

</VBox>
